<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:orientation="vertical" >

    

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 顶部广告栏 -->

            <org.gr.wocandroid.activity.SlidingSwitcherView
                android:id="@+id/slidingLayout"
                android:layout_width="fill_parent"
                android:layout_height="150dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/image1" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/image2" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/image3" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/image4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dip"
                    android:layout_height="20dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dip"
                    android:orientation="horizontal" >
                </LinearLayout>
            </org.gr.wocandroid.activity.SlidingSwitcherView>

            <!-- 分类板块标题 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/forum_index_title1"
                android:textSize="20sp" />

            <!-- 分类板块按钮 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="15sp"
                android:paddingRight="15sp" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#EDEDED" >

                    <!-- 第一行按钮 -->

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <!-- 左边按钮 -->

                        <LinearLayout
                            android:id="@+id/llMovie"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgmovie"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_movie" />

                            <Button
                                android:id="@+id/forum_index_btnmovie"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="电影板块"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- 右边按钮 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgmusic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_movie" />

                            <Button
                                android:id="@+id/forum_index_btnmusic"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="音乐板块"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </TableRow>

                    <!-- 第二行按钮 -->

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <!-- 左边按钮 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgactivity"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_activity" />

                            <Button
                                android:id="@+id/forum_index_btnactivity"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="活动板块"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- 右边按钮 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgeducation"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_activity" />

                            <Button
                                android:id="@+id/forum_index_btneducation"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="教学板块"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </TableRow>

                    <!-- 第三行按钮 -->

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <!-- 左边按钮 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgbook"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_activity" />

                            <Button
                                android:id="@+id/forum_index_btnbook"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="读书板块"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!-- 右边按钮 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1" >

                            <ImageButton
                                android:id="@+id/forum_index_imgchat"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/forum_index_activity" />

                            <Button
                                android:id="@+id/forum_index_btnchat"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical|left"
                                android:text="畅谈板块"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <!-- 帖子排名标题 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/forum_index_title2"
                android:textSize="20sp" />

            <!-- 帖子排名滑窗 -->

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:layerType="software"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="275dp"
                    android:clipChildren="false" >
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <!-- 今日热门标题 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/forum_index_title3"
                android:textSize="20sp" />

            <!-- 添加一个ListView组件 -->

            <ListView
                android:id="@+id/lstHotPosts"
                android:layout_width="fill_parent"
                android:layout_height="377dp" >
            </ListView>

            <!-- 版权栏 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="@string/copyright"
                android:textColor="#ADADAD" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
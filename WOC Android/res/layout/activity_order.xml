<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/name_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:hint="请输入您的姓名"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/location_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:hint="请输入您的地址"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/phone_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:hint="请输入您的电话号码"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/email_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:hint="请输入您的电子邮箱"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_margin="10dp" />
        <Button android:id="@+id/order_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_buy"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="立即申请"
            android:layout_margin="10dp"/>
    </LinearLayout>
    

</LinearLayout>

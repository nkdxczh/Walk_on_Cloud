<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

   <LinearLayout
       android:layout_marginTop="30dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/information_store_icon" />

            <TextView
                android:id="@+id/sell_produces"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/style_title_text_view"
                android:text="@string/information_store_sell_produces"
                android:textColor="@color/white"
                android:textSize="18dip"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray" />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:scaleType="fitCenter"
                android:src="@drawable/information_store_icon" 
                android:contentDescription="@string/content_description"/>

            <TextView
                android:id="@+id/exchange_produces"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/style_title_text_view"
                android:text="@string/information_store_exchange_produces"
                android:textColor="@color/white"
                android:textSize="18dip"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/lightgray" />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/information_store_icon"
                 android:contentDescription="@string/content_description"/>

            <TextView
                android:id="@+id/float_produces"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/style_title_text_view"
                android:text="@string/information_store_float_produces"
                android:textColor="@color/white"
                android:textSize="18dip"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray" />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/information_store_icon"
                android:contentDescription="@string/content_description"/>

            <TextView
                android:id="@+id/attention_produces"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/style_title_text_view"
                android:text="@string/information_store_attention_produces"
                android:textColor="@color/white"
                android:textSize="18dip"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray" />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/information_store_icon" 
                android:contentDescription="@string/content_description"/>

            <TextView
                android:id="@+id/orders"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/style_title_text_view"
                android:text="@string/information_store_orders"
                android:textColor="@color/white"
                android:textSize="18dip"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray" />
    </LinearLayout>

</LinearLayout>